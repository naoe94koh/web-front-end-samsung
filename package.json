{
  "scripts": {
    "sass:compile": "sass --update client/src/scss:client/public/styles",
    "sass:watch": "npm run sass:compile -- --watch",
    "sass:build": "sass --style=compressed --no-source-map client/src/scss:client/public/styles",
    "babel:compile": "babel client/src/ecmascript -d client/public/scripts",
    "babel:watch": "npm run babel:compile -- --watch"
  },
  "devDependencies": {
    "@babel/cli": "7.18.10",
    "@babel/core": "7.19.1",
    "@babel/preset-env": "^7.19.1",
    "@types/node": "^18.7.18",
    "sass": "1.54.9"
  }
}
